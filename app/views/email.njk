{% extends "layouts/default.njk" %}

{% set title = "Find your TRN" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
        {{ govukInput({
          label: {
            text: "Email address",
            classes: "govuk-label--xl",
            isPageHeading: true
            },
            hint: {
              text: "We’ll email you a link to confirm your email address. This doesn’t have to be the same email address that you had when your TRN was issued."
            },
            id: "email-address",
            name: "email-address"
          }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
