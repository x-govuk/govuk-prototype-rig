{% extends "layouts/default.njk" %}

{% set title = "Find out your TRN" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block content %}
  {% set ITTProviderNameHtml %}
    {{ govukInput({
      label: {
        text: "Your school, university or other training provider"
      },
      id: "itt-provider",
      name: "itt-provider"
    }) }}
  {% endset %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
        {{ govukRadios(decorate({
          fieldset: {
            legend: {
              classes: "govuk-fieldset__legend--xl",
              isPageHeading: true,
              text: 'Have you ever been enrolled in initial teacher training in England or Wales?'
            }
          },
          items: [
            {
              text: "Yes",
              value: 'yes',
              conditional: { html: ITTProviderNameHtml }
            },
            {
              text: "No",
              value: 'no'
            }]
        }, ["wizard", "has-done-itt"])) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
