{
  "name": "govuk-prototype-rig",
  "description": "Rapidly create HTML prototypes of GOV.UK services",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build-assets": "rollup --config --silent",
    "watch-assets": "rollup --config --silent --watch",
    "serve": "nodemon lib/listen-on-port.js",
    "start": "npm-run-all --serial build-assets serve",
    "dev": "npm-run-all --parallel watch-assets serve",
    "lint": "standard && stylelint 'app/**/*.scss'"
  },
  "dependencies": {
    "@rollup/plugin-multi-entry": "^4.1.0",
    "basic-auth": "^2.0.0",
    "browser-sync": "^2.11.1",
    "client-sessions": "^0.8.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.13.0",
    "express-validator": "^6.12.2",
    "govuk-frontend": "^3.14.0",
    "inquirer": "^8.2.0",
    "keypather": "^3.0.0",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.1",
    "portscanner": "^2.1.1",
    "rollup": "^2.58.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-scss": "^3.0.0",
    "sass": "^1.42.1"
  },
  "devDependencies": {
    "standard": "^16.0.4",
    "stylelint": "^13.13.1",
    "stylelint-config-gds": "^0.1.0"
  },
  "nodemonConfig": {
    "watch": [
      ".env",
      "**/*.js",
      "**/*.json"
    ],
    "ignore": [
      "public/*",
      "app/assets/*",
      "node_modules/*"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
